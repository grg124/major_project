  <script src="https://rawgit.com/RickStrahl/jquery-resizable/master/src/jquery-resizable.js"></script>
  <script>
      $(function(){
          $(".static_class").click(function(){
            if($(this).val() === "Yes")
              $("#extra").show("fast");
            else
              $("#extra").hide("fast");
          });
        });
      var editor = CodeMirror.fromTextArea
      (document.getElementById('editor'),{
          theme:"dracula",
          lineNumbers: true,
          autoCloseTags: true,
          matchBrackets: true,
          autoCloseBrackets: true,
          matchTags: false,
          extraKeys: {"Ctrl-Space": "autocomplete"}
      }); 
      $(document).ready(function() {
        $("#compilerbtn").on('click', function(e){
          var data = {};
          $.each($('#myform').serializeArray(), function(i, field) {
              data[field.name] = field.value;
          });
          data.code = editor.getValue();
            e.preventDefault();
            $.ajax({
                type: 'post',
                url: '/compilecode',
                data: data,
                dataType: 'text',
                success:function(data){
                  debugger;
                  $('#result').html("Successfully Compiled And Executed");
                },error:function(error){
                  debugger;
                  $('#result').html(error);
                  console.log(error);
                }
            })
        });
        $("#saveCode").on('click', function(e){
          var data = {};
          // $.each($('#myform').serializeArray(), function(i, field) {
          //     data[field.name] = field.value;
          // });
          data.code = editor.getValue();
            e.preventDefault();
            $.ajax({
                type: 'post',
                url: '/Savecode',
                data: data,
                dataType: 'text',
                success:function(data){
                  debugger;
                  $('#result').html("Successfully Saved");
                },error:function(error){
                  debugger;
                  $('#result').html(error);
                  console.log(error);
                }
            })
        });
        $('#changeLanguage').change(function(){
            var option = this.value;
            if(option === "C")
                editor.setOption('mode', "text/x-csrc");
            else if(option === "C++")
                editor.setOption('mode', "text/x-c++src");
            else if(option === "Java")
                editor.setOption('mode', "text/x-java");
            else
                editor.setOption('mode', "text/x-python");
        }) 
      });

    function openCity( evt, problem, input, output, constraints ) {
      // Declare all variables
      // var i, tabcontent, tablinks;
      document.getElementById("problem").innerHTML = problem;
      document.getElementById("inputformat").innerHTML = input;
      document.getElementById("outputformat").innerHTML = output;
      document.getElementById("constraints").innerHTML = constraints;
    
       // Get all elements with class="tablinks" and remove the class "active"
       tablinks = document.getElementsByClassName("tablinks");
       for (i = 0; i < tablinks.length; i++) {
         tablinks[i].className = tablinks[i].className.replace(" active", "");
       }

      // Show the current tab, and add an "active" class to the link that opened the tab
       evt.currentTarget.className += " active";
    }

    $(".panel-left").resizable({
   handleSelector: ".splitter",
   resizeHeight: false,
   resizeWidth: false,
 });

 $(".panel-top").resizable({
   handleSelector: ".splitter-horizontal",
   resizeWidth: false,
   
 });
  </script>
