<!DOCTYPE html>
<html>
<head>
    <title>Coding Mania</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="" type="image/x-icon" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/mainstyle.css" />
    <link rel="stylesheet" href="/stylesheets/table.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href= "https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    <style>
        #extra{ display: none; }
        .my-head{
            background-color:#37474F;
            margin :0;
            width:100%;
        }
        .list-style{
            width: 50%;
        }
        .container {
            padding-right: 15px;
            padding-left: 15px;
        }
        @media (max-width: 500px) {
            .list-style{
                width: 90%;
            }
        }
    </style>
</head>

<body style="background-color: #ffffff ; ">
    <nav class="navbar navbar-default my-head " >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed " data-toggle="collapse" data-target="#my-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <p class="navbar-brand header-style"  style="color: white; ">
                    <strong >Coding Mania</strong>
                </p>
            </div>
            <div class="collapse navbar-collapse" id="my-collapse">
                <ul class="nav navbar-nav ">
                    <li class="myactive"><a href="/" style="color:#CFD8DC  ;  "><span style="color: white"><span class="fa fa-home"></span><strong> Home</strong></span></a></li>
                    <li class="mychoice"><a style="color:#CFD8DC  ; " href="/onlineExam"><strong>e-Exam</strong> </a></li>
                    <% if(user == "admin"){ %>
                        <li class="mychoice"><a style="color:#CFD8DC  ; " href="/admin/addSection"><strong> Add Section</strong> </a></li>
                    <%}%>
                </ul>
                <% if(user){%>
                <ul class="nav navbar-nav navbar-right" id="logout">
                    <li class="mychoice"><a id="user" style="color: #ffffff  ;cursor: pointer;margin-left: 50px;" ><span class="fa fa-user"></span><strong>  <%=user%></strong></a></li>
                </ul>
                <%}else{%>
                <ul class="nav navbar-nav navbar-right">
                    <li class="mychoice"><a style="color: #CFD8DC  ;cursor: pointer"  data-toggle="modal" data-target="#formModal"><strong> Login</strong></a></li>
                    <li class="mychoice"><a style="color: #CFD8DC  ;cursor: pointer" href="/signup"><strong> Sign up</strong></a></li>
                </ul>
                <%}%>
            </div>
        </div>
    </nav>


<!--*****************************************************************************************************************************************************************************************************-->
    <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="FormModalLabel">
        <div class="modal-dialog login-modal" role="document">
            <div class="modal-content" style="margin-top: 120px">
                <form method="post" action="/login">
                    <input type="hidden" id="form-id" name="id" />
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel"><strong>Login</strong></h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>User Name</label>
                            <input type="text" required class="form-control" name="username" />
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" required  name="password" class="form-control" >
                        </div>
                    </div>
                    <div class="modal-footer">
                        <center>
                            <input type="submit" class="btn btn-primary" value="Login" />
                            <a class="btn btn-warning" href="/signup">Sign Up</a>
                            <a class="btn btn-danger" href="/auth/google">Google</a>
                        </center>
                    </div>
                </form>
            </div>
        </div>
    </div>

<!--*****************************************************************************************************************************************************************************************************-->

    <script>
       $('#logout').confirm({
            title: 'Logout User!',
            content: 'Do you really want to Logout?',
            buttons: {
                confirm: function () {
                    window.location.replace("/index/logout");
                },
                cancel: function () {
                    console.log('canacel');
                },
            }
        });
    </script>
